<assembly>
	<id>sitemap-gen-dist</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.parent.basedir}/src/main/resources</directory>
			<includes>
				<include>config.properties</include>
				<include>start.sh</include>
			</includes>
			<outputDirectory/>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}</directory>
			<includes>
				<include>README.md</include>
			</includes>
			<outputDirectory/>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory/>
		</fileSet>
	</fileSets>
</assembly>