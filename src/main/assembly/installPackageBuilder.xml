<?xml version="1.0" encoding="UTF-8"?>
<!-- Provides a pretty Assembly output.
    According to the official MPI packaging scheme (as mandated by the application managers).
    It aims at the following structure:
    /vlo-${VERSION}
        /doc
        /bin/importer (importer-stuff here)
        /config (all config stuff here)
            /solr (the solr config directory
            /vlo (the vlo context fragment with which parameters to use)
        /war
            /solr (the solr war)
            /vlo (the vlo war)
-->
<assembly>
    <id>Distribution</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
<!-- DOCS -->
        <fileSet>
            <directory>docs</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>vlo_webapp</directory>
            <includes>
                <include>CHANGES</include>
                <include>DEPLOY-README</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>vlo_solr</directory>
            <includes>
                <include>README.TXT</include>
            </includes>
            <outputDirectory>doc/vlosolr</outputDirectory>
        </fileSet>
<!-- IMPORTER -->
        <!-- Jar File -->
        <fileSet>
            <directory>vlo_webapp/target</directory>
            <includes>
                <include>*jar-with-dependencies.jar</include>
            </includes>
            <outputDirectory>bin/importer</outputDirectory>
        </fileSet>
        <!-- run script -->
        <fileSet>
            <directory>vlo_webapp/src/main/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>bin/importer</outputDirectory>
        </fileSet>
        <!-- config files -->
        <fileSet>
            <directory>vlo_webapp/src/main/bin</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <outputDirectory>bin/importer</outputDirectory>
        </fileSet>
        <fileSet><!-- TODO: Make NOT NEEDED, need properties instead! -->
            <directory>vlo_webapp/src/main/resources</directory>
            <includes>
                <include>importerConfig.xml</include>
                <include>application.properties</include>
            </includes>
            <outputDirectory>bin/importer</outputDirectory>
        </fileSet>
<!-- VLO WAR FILE -->
        <!-- WAR FILE -->
        <fileSet>
            <directory>vlo_webapp/target</directory>
            <includes>
                <include>*.war</include>
            </includes>
            <outputDirectory>war/vlo</outputDirectory>
        </fileSet>
        <!-- config -->
        <fileSet>
            <directory>vlo_webapp/src/main/resources</directory>
            <includes>
                <include>contextfragment.xml</include>
            </includes>
            <outputDirectory>config/vlo</outputDirectory>
        </fileSet>

<!-- SOLR -->
        <!-- SOLR WAR FILE -->
        <fileSet>
            <directory>vlo_solr/target</directory>
            <includes>
                <include>*.war</include>
            </includes>
            <outputDirectory>war/solr</outputDirectory>
        </fileSet>

        <!-- SOLR CONFIG -->
        <fileSet>
            <directory>vlo_solr/target/vlo_solr-1.4.2-vlo_solr_conf</directory>
            <includes>
                <include>solr</include>
            </includes>
            <outputDirectory>config/solr/solrconfig</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>vlo_solr/target/vlo_solr-1.4.2-vlo_solr_conf</directory>
            <includes>
                <include>vlo_solr.xml</include>
            </includes>
            <outputDirectory>config/solr</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
