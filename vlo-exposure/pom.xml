<?xml version="1.0"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <parent>
        <groupId>eu.clarin.cmdi</groupId>
        <artifactId>vlo</artifactId>
        <version>4.8.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.clarin.cmdi</groupId>
    <artifactId>vlo-exposure</artifactId>
    <version>4.8.0</version>
    <name>vlo-exposure</name>
    <url>http://maven.apache.org</url>
    <properties>
        <log4j.version>2.6.2</log4j.version>
        <junit.version>4.12</junit.version>
        <postgresql.version>42.2.5.jre7</postgresql.version>
        <pg-embedded.version>0.7.1</pg-embedded.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <slf4j.version>1.7.12</slf4j.version>
    </properties>
    <dependencies>
        <!-- Intra-project dependencies -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>vlo-commons</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
