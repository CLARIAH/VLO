<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>jar</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- LIB -->
       <!--<fileSet>
            <directory>target/lib</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet> -->
        <!-- CLASSES -->
        <fileSet>
            <directory>target/classes</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <excludes>
                <exclude>applicationContext.xml</exclude>
                <exclude>application.properties</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!-- Resources -->
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <excludes>
                <exclude>applicationContext.xml</exclude>
                <exclude>application.properties</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!-- Overwrite applicationContext.xml -->
        <fileSet>
            <directory>src/test/resources</directory>
            <includes>
                <include>applicationContext.xml</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>

</assembly>
