<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="importerConfig" class="eu.clarin.cmdi.vlo.importer.ImporterConfig">
<!--    <property name="deleteAllFirst" value="true"/> You can delete everything first -->
<!--    <property name="printMapping" value="true"/> Can print the mapping of facets to xpath patterns for every xsd, so it can be checked manually. -->
    <property name="dataRoots">
      <list>
        <bean class="eu.clarin.cmdi.vlo.importer.DataRoot">
          <property name="originName" value="MPI IMDI Archive"/>
          <property name="rootFile"
            value="/lat/apache/htdocs/oai-harvester/mpi-self-harvest/harvested/results/cmdi/"/>
        </bean>
        <bean class="eu.clarin.cmdi.vlo.importer.DataRoot">
          <property name="originName" value="CMDI Providers"/>
          <property name="rootFile"
            value="/lat/apache/htdocs/oai-harvester/cmdi-providers/harvested/results/cmdi/"/>
        </bean>
         <bean class="eu.clarin.cmdi.vlo.importer.DataRoot">
          <property name="originName" value="OLAC Metadata Providers"/>
          <property name="rootFile"
            value="/lat/apache/htdocs/oai-harvester/olac-and-dc-providers/harvested/results/cmdi/"/>
        </bean>
        <bean class="eu.clarin.cmdi.vlo.importer.DataRoot">
          <property name="originName" value="CLARIN LRT inventory"/>    
          <property name="rootFile"
            value="/lat/apache/htdocs/oai-harvester/lrt/harvester/results/cmdi/"/>
        </bean> 
      </list>
    </property>
  </bean>

  
</beans>

