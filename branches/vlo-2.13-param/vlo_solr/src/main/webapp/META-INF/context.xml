<?xml version="1.0" encoding="utf-8"?>

<!-- Solr context file

solr/home : the directory in which the solr server will store it's data.

Please refer to http://wiki.apache.org/solr for more information on how the 
solr server should be configured. The war should be unpacked in the docBase
directory.

-->

<Context path="vlo_solr" debug="0" crossContext="true">
  <Environment name="solr/home" 
               type="java.lang.String" 
               value="${vlo.solr.home}/${vlo.solr.conf}" 
               override="true"/>
</Context>
