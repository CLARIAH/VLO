<?xml version="1.0" encoding="UTF-8"?>
<!-- Provides a pretty Assembly output.
    According to the official MPI packaging scheme (as mandated by the application managers).
    It aims at the following structure:
    /vlo-${VERSION}
        /doc
        /bin/importer (importer-stuff here)
        /config (all config stuff here)
            /solr (the solr config directory
            /vlo (the vlo context fragment with which parameters to use)
        /war
            /solr (the solr war)
            /vlo (the vlo war)
-->
<assembly>
    <id>Distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>

<!-- DOCS -->
        <fileSet>
            <directory>docs</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>vlo_web_app</directory>
            <includes>
                <include>CHANGES</include>
                <include>DEPLOY-README</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <includes>
                <include>DEPLOY-README</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>vlo_solr</directory>
            <includes>
                <include>README.TXT</include>
            </includes>
            <outputDirectory>doc/vlosolr</outputDirectory>
        </fileSet>
<!-- IMPORTER -->
        <!-- Jar File -->
        <fileSet>
            <directory>vlo_importer/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <!-- run script -->
        <fileSet>
            <directory>vlo_importer/src/main/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <!-- config files -->
        <fileSet>
            <directory>vlo_importer/src/main/bin</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>vlo_importer/src/main/resources</directory>
            <includes>
                <include>cmdi2xhtml.xsl</include>
                <include>facetConcepts.xml</include>
                <include>nationalProjectsMapping.xml</include>
                <include>VloConfig.xml</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
<!-- WEB APPLICATION -->
        <!-- WAR FILE -->
        <fileSet>
            <directory>vlo_web_app/target</directory>
            <includes>
                <include>*.war</include>
            </includes>
            <outputDirectory>war/vlo</outputDirectory>
        </fileSet>
        <!-- config -->
        <fileSet>
            <directory>vlo_web_app/src/main/resources</directory>
            <includes>
                <include>VloConfig.xml</include>
            </includes>
            <outputDirectory>config</outputDirectory>
        </fileSet> 

<!-- SOLR SERVER -->
        <!-- SOLR WAR FILE -->
        <fileSet>
            <directory>vlo_solr/target</directory>
            <includes>
                <include>*.war</include>
            </includes>
            <outputDirectory>war/solr</outputDirectory>
        </fileSet>

        <!-- SOLR CONFIG -->
        <fileSet>
            <directory>vlo_solr/target/vlo_solr-3.6.0-vlo_solr_conf</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>config/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>vlo_solr/target/vlo_solr-3.6.0-vlo_solr_conf</directory>
            <includes>
                <include>vlo_solr.xml</include>
            </includes>
            <outputDirectory>config</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
